<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50dip"
    tools:context=".MainActivity"
    android:background="#000000">

    <com.example.park.customswitch.BroadCastSwitch
        android:layout_width="@dimen/gameinfo_broadcast_switch_width"
        android:layout_height="@dimen/gameinfo_broadcast_switch_height"/>

    <com.example.park.customswitch.AnimationSwitch
        android:id="@+id/sslswitch"
        android:layout_width="62dp"
        android:layout_height="28dp"
        android:layout_marginTop="50dip"/>

</LinearLayout>
